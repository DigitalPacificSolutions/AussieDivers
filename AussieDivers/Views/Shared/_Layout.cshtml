<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Aussie Divers</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)

</head>
<body>

    <div class="wrapper">

        <!-- Sidebar -->
        <div class="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <img src="~/Content/Images/logo.png" />
                </li>
                <li>
                    <a class="virtual" href="~/home"><i class="glyphicon glyphicon-home"></i> Home</a>
                </li>
                <li>
                    <a class="virtual" href="~/calendar"><i class="glyphicon glyphicon-calendar"></i> Calendar</a>
                </li>
                <li>
                    <a class="virtual" href="~/people"><i class="glyphicon glyphicon-user"></i> Customers</a>
                </li>
                <li>
                    <a href="#"><i class="glyphicon glyphicon-book"></i> Bookings</a>
                </li>
                <li>
                    <a href="#"><i class="glyphicon glyphicon-tasks"></i> Reports</a>
                </li>
                <li>
                    <a href="~/contactfollowup"><i class="glyphicon glyphicon-star"></i> Contact Follow Up</a>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div class="page-content-wrapper">

            <div class="container-fluid">
                <div class="row">
                    <div class="navbar navbar-default">
                        <a href="#menu-toggle" id="menu-toggle" class="btn btn-default pull-left"
                           style="border-color: transparent; margin-top: .4em; margin-left:.4em">
                            <i class="glyphicon glyphicon-menu-hamburger"></i>
                        </a>
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            @Html.ActionLink("Aussie Divers", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                        </div>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("About", "About", "Home")</li>
                                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            </ul>
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                </div>
            </div>

            <div class="inner-page-content">
                <div class="container-fluid">

                    @RenderBody()
                
                </div>
            </div>
        </div>
        <!-- End Page Content -->
    </div>                                  
   

    @Scripts.Render("~/bundles/layout")

    @RenderSection("scripts", required: false)
</body>
</html>
